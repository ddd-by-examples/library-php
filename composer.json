{
    "name": "ddd-by-examples/library-php",
    "type": "project",
    "description": "A comprehensive Domain-Driven Design example with problem space strategic analysis and various tactical patterns wirtten in PHP.",
    "license": "MIT",
    "authors": [
        {
            "name": "Arkadiusz Kondas",
            "email": "arkadiusz.kondas@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "fale/isbn": "^3.1",
        "munusphp/munus": "^0.15",
        "myclabs/php-enum": "^1.7",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "friendsofphp/php-cs-fixer": "^3.58",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Akondas\\Library\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Akondas\\Library\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixture/Fixtures.php",
            "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
        ]
    },
    "scripts": {
        "check-cs": [
            "php-cs-fixer fix --dry-run --diff"
        ],
        "fix-cs": [
            "php-cs-fixer fix"
        ],
        "behat": [
            "behat"
        ],
        "phpunit": [
            "phpunit"
        ],
        "phpstan": [
            "phpstan analyse -c phpstan.neon"
        ],
        "ci": [
            "composer validate",
            "@check-cs",
            "@phpstan",
            "@phpunit",
            "@behat"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
